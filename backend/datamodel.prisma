enum Permission {
  ADMIN
  USER
  STOCKCREATE
  STOCKUPDATE
  STOCKDELETE
  RANDOMPROFILEMANAGE
  PERMISSIONUPDATE
}

type Stock {
  id: ID! @id
  name: String! @unique
  symbol: String! @unique
  opening: Float
  price: Float
  grouping: Float!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String! 
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
  money: Float @default(value: 10000000)
  stocks: [StockOrder]
}

type RandomProfile {
  id: ID! @id
  name: String!
  money: Float @default(value: 10000000)
  stocks: [RandomProfileStockOrder]
}

type StockOrder {
  id: ID! @id
  stock: Stock!
  user: User!
  quantity: Float! @default(value: 1)
  purchasedAt: Float!
}

type RandomProfileStockOrder {
  id: ID! @id
  stock: Stock!
  profile: RandomProfile!
  quantity: Float! @default(value: 1)
  purchasedAt: Float!
}